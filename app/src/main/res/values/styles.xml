<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorVibrantBlue</item>
        <item name="colorPrimaryDark">@color/colorCapgeminiBlue</item>
        <item name="colorAccent">@color/colorTechRed</item>
        <item name="colorButtonNormal">@color/colorCapgeminiBlue</item>
    </style>

    <!-- toolbar theme -->
    <style name="ToolbarTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColorPrimary">@color/colorGray</item>
        <item name="android:textColorSecondary">@color/colorGray</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <!-- toolbar popup menu theme -->
    <style name="ToolbarMenuTheme" parent="Theme.AppCompat.Light">

    </style>

    <!-- tab layout text style changes -->
    <style name="TabLayoutTextFont" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/ubuntu</item>
    </style>

    <!-- red button theme -->
    <style name="ButtonRed" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/background_rounded_red</item>
    </style>

</resources>