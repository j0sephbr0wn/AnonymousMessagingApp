<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorVibrantBlue</item>
        <item name="colorPrimaryDark">@color/colorCapgeminiBlue</item>
        <item name="colorAccent">@color/colorTechRed</item>
    </style>

    <!-- toolbar popup menu theme -->
    <style name="ToolbarMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorGray</item>
    </style>

    <!-- tab layout text style changes -->
    <style name="TabLayoutTextFont" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>