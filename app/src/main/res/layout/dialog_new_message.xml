<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCapgeminiBlue"
    android:padding="8dp">

    <ImageView
        android:id="@+id/close_new_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="Exit popup"
        android:src="@drawable/ic_close_gray_24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/close_new_message"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingLeft="32dp"
        android:paddingEnd="32dp"
        android:paddingRight="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/ubuntu"
            android:text="New Message"
            android:textColor="@color/colorGray"
            android:textSize="28sp" />


        <EditText
            android:id="@+id/editText_new_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/ubuntu"
            android:hint="Subject"
            android:inputType="textCapSentences"
            android:textColor="@color/colorGray"
            android:textColorHint="@color/colorGray" />

        <Button
            android:id="@+id/btn_new_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_rounded_gray"
            android:fontFamily="@font/ubuntu"
            android:text="Start Message" />

    </LinearLayout>

</RelativeLayout>